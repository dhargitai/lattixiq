#!/bin/sh

echo "ğŸ”¨ Running build checks before push..."

# Run build and capture output
BUILD_OUTPUT=$(npm run build 2>&1)
BUILD_EXIT_CODE=$?

if [ $BUILD_EXIT_CODE -eq 0 ]; then
  echo "âœ… Build successful!"
  exit 0
fi

echo "âŒ Build failed. Attempting automatic fixes..."

# Save build output to pass to fix script
echo "$BUILD_OUTPUT" > /tmp/build-output.txt

# Run ESLint with fix flag for simple issues
echo "ğŸ”§ Running ESLint auto-fix for simple issues..."
npm run fix:types

# Run custom fix script for TypeScript errors
echo "ğŸ”§ Checking for type errors..."
npx tsx scripts/fix-build-errors.ts "$BUILD_OUTPUT"
FIX_EXIT_CODE=$?

# If fix script exited with error (type errors found), fail the push
if [ $FIX_EXIT_CODE -ne 0 ]; then
  echo ""
  echo "âŒ Type errors found that require manual fixing."
  echo "Please fix the type errors listed above before pushing."
  echo ""
  echo "The pre-push hook prevented the push to maintain type safety."
  exit 1
fi

# Check if any files were modified by auto-fixes
if git diff --quiet; then
  echo "â„¹ï¸  No files were automatically fixed"
else
  echo "ğŸ“ Files were modified by auto-fix"
  # Stage any fixed files
  git add -A
fi

# Try build again
echo "ğŸ”¨ Re-running build after fixes..."
npm run build

if [ $? -eq 0 ]; then
  echo "âœ… Build successful after fixes!"
  
  # Check if we have staged changes
  if ! git diff --cached --quiet; then
    echo "ğŸ“¦ Committing auto-fixes..."
    git commit -m "fix: auto-fix build errors before push

- Fixed ESLint errors (unused vars, display names, etc.)
- Applied automated fixes from pre-push hook"
  fi
  
  exit 0
else
  echo "âŒ Build still failing. Please fix the following errors manually:"
  echo ""
  npm run build
  exit 1
fi