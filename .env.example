# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Environment
NODE_ENV=development

# Development Options
# Set to 'true' to use a curated test dataset instead of the full knowledge_content database
# This is useful for new developers who don't have the full database seeded yet
USE_TEST_DATA=false

# Skip integration tests that require real database connection
SKIP_INTEGRATION_TESTS=false

# Senja.io Configuration
NEXT_PUBLIC_SENJA_PROJECT_ID=your-senja-project-id
NEXT_PUBLIC_SENJA_FORM_ID=your-senja-form-id

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
NEXT_STRIPE_MONTHLY_PRODUCT_ID=price_your-monthly-price-id
NEXT_STRIPE_ANNUAL_PRODUCT_ID=price_your-annual-price-id
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Email Configuration (Resend)
RESEND_API_KEY=re_your-resend-api-key
RESEND_FROM_EMAIL=notifications@your-domain.com

# Cron Job Secret (for notification processing)
CRON_SECRET=your-cron-secret-key